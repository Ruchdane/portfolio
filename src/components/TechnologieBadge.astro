---
import { Technologie } from "@/schema";
import { TECHNOLOGIE_MAP } from "@/consts.ts";
interface Props {
  name: Technologie;
}

const { name: key } = Astro.props;
const { name, icon} = TECHNOLOGIE_MAP[key];

---

<div class="badge">
  <div class="gradient-overlay"></div>
  <div class="badge-content">
    <i class={icon}></i>
    <span>{name}</span>
  </div>
</div>

<style lang="scss">
  .badge {
    position: relative;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
    
    .gradient-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(to right, rgba(var(--primary), 0.5), rgba(var(--secondary), 0.5));
      transform: translateX(-100%);
      transition: transform 0.3s;
    }

    &:hover .gradient-overlay {
      transform: translateX(0);
    }

    .badge-content {
      position: relative;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
      border: 1px solid rgb(39, 39, 42);
      transition: border-color 0.3s;

      &:hover {
        border-color: rgb(63, 63, 70);
      }
    }

    i {
      font-size: 1rem;
    }

    span {
      font-size: 0.875rem;
    }
  }
</style>