---
import i18n from "i18next";
interface Props {
  date: Date;
  format?: Intl.DateTimeFormatOptions;
}

const { date, format } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(
      i18n.language,
      format ?? {
        year: "numeric",
        month: "short",
        day: "numeric",
      }
    )
  }
</time>
