---
import GithubIconLink from "./IconLinks/GithubIconLink.astro";
import LinkedinIconLink from "./IconLinks/LinkedinIconLink.astro";
import MailIconLink from "./IconLinks/MailIconLink.astro";

const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} AMADOU Ruchdane. All rights reserved.
	<div class="social-links">
		<GithubIconLink />
		<LinkedinIconLink />
		<MailIconLink />
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background-color: var(--neutral-300);
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
	}
	.social-links a:hover {
	}
</style>
