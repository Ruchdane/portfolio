---
import IconLinks from "./IconLink.astro";
---

<IconLinks
  href="https://https://www.linkedin.com/in/ruchdane/"
  highlightBg="var(--accent-800)"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    id="mail-icon-group"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
      d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
  >
</IconLinks>
<style lang="scss" is:global>
  #mail-icon-group {
    fill: #fff;
    transition: fill 0.5s ease-in;
  }
  a:hover #mail-icon-group {
    fill: var(--accent-500);
  }
</style>
