---
import i18n, { changeLanguage } from "i18next";
import { getCollection, getEntry, render } from "astro:content";
import { Globe, Download, Code } from "lucide-astro";
import { Image } from "astro:assets";
import BasePage from "@/layouts/BasePage.astro";
import { Carousel, PeopleProfile, TechnologieBadge } from "@/components/astro";
import { generateProjectSchema } from "@/schema";
import type { Language } from "@/consts";

changeLanguage("en");

const language = (i18n.language ?? "fr") as Language;
export async function getStaticPaths() {
    const project = await getCollection("project");
    return project.map((project) => ({
        params: { slug: project.id },
        props: { ...project },
    }));
}
const slug = Astro.params.slug.toUpperCase();
const projectEntry = Astro.props;
const { logo, title, description, thumbs, showcases, websiteUrl, downloadUrl, sourceUrl, technologies, } = projectEntry.data;
const collaborators = await Promise.all(projectEntry.data.collaborators.map(async (entry) => (await getEntry("people", entry.id))?.data));
const { Content } = await render(projectEntry);
---

<BasePage
  title={`${slug} - ${title[language]}`}
  description={description[language]}
  jsonLd={generateProjectSchema(slug, projectEntry.data)}
  image={thumbs[0]?.src}
>
  <div class="project-hero" transition:name={`project-hero-${slug}`}>
    <div class="project-header" transition:name={`project-${slug}-name`}>
      <span class="project-logo">
        {logo !== undefined ? <Image src={logo} alt={slug[0]} /> : slug[0]}
        <span> {slug} </span>
      </span>
    </div>
    <div class="project-meta">
      <div class="project-actions" transition:name={`project-${slug}-actions`}>
        {
          websiteUrl && (
            <a
              href={websiteUrl}
              target="_blank"
              rel="noopener"
              class="icon-button"
            >
              <Globe />
              <span> Visiter </span>
            </a>
          )
        }
        {
          downloadUrl && (
            <a href={downloadUrl} target="_blank" class="icon-button">
              <Download />
              <span> Télécharger </span>
            </a>
          )
        }
        {
          sourceUrl && (
            <a
              href={sourceUrl}
              target="_blank"
              target="_blank"
              rel="noopener"
              class="icon-button"
            >
              <Code />
              <span> Source </span>
            </a>
          )
        }
      </div>
      <Carousel
        class="project-cover"
        transition:name={`project-${slug}-thumbnails`}
        images={showcases ?? thumbs}
        imagesLayout="constrained"
      />
      <div>
        <h1>{title[language]}</h1>
        <ul class="project-collaborator">
          {
            collaborators.map((collaborator) =>
              collaborator ? (
                <li>
                  {" "}
                  <PeopleProfile {...collaborator} />{" "}
                </li>
              ) : null,
            )
          }
        </ul>
        <p transition:name={`project-${slug}-description`}>
          {description[language]}
        </p>
        <div
          class="project-technologies"
          transition:name={`project-${slug}-technologies`}
        >
          {technologies.map((tech) => <TechnologieBadge name={tech} />)}
        </div>
      </div>
    </div>
  </div>
  <div class="wrapper markdown">
    <Content />
  </div>
</BasePage>
<style lang="scss">
  @use "~/media-query" as *;

  h1 {
    font-size: var(--font-h3);
  }
  .project {
    &-hero {
      font-family: "JetBrainsMono", monospace;
      background-color: var(--primary-200);
      padding: 2rem;
      @include breakpoint(desktop) {
        padding: 6rem;
      }
    }

    &-logo {
      display: flex;
      gap: 0.25rem;
      align-items: center;
      font-size: var(--font-h3);
      img {
        height: 1.25em;
        width: 1.25em;
      }
    }

    @include breakpoint(desktop) {
      &-header {
        display: flex;
        margin-bottom: 1rem;
        justify-content: space-between;
        align-items: center;
      }
    }

    @include breakpoint(tablet) {
      &-meta {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 5rem;
        padding-inline: 6rem;
      }
    }

    &-collaborator {
      display: flex;
      gap: 1rem;
      list-style: none;
      margin-block: 1rem;
    }

    &-actions {
      display: none;
      flex-direction: column;
      position: absolute;
      height: fit-content;
      background-color: var(--accent-50);
      border-radius: 1rem;
      padding: 0.5rem 0.75rem;
      width: fit-content;
      gap: 2rem;
      right: 1rem;
      z-index: var(--z-index-project-actions);
      &:has(a) {
        display: flex;
      }
      @include breakpoint(desktop) {
        right: 5rem;
      }

      .icon-button {
        display: flex;
        align-items: center;
        flex-direction: column;
      }
    }

    &-technologies {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 1.5rem;
    }
  }
</style>
